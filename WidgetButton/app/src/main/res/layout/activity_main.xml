<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.snowhoang.widgetbutton.MainActivity">
    <!--Exercise 1-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/imagebtn_red"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/red"/>
        <ImageButton
            android:id="@+id/imagebtn_blue"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/blue"
            android:scaleType="fitXY"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv1"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/black"/>
    <!--Exercise 2-->
    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <RadioButton
            android:id="@+id/rb_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Red"
            android:checked="false"
            android:buttonTint="@color/black"/>
        <RadioButton
            android:id="@+id/rb_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Yellow"
            android:checked="false"
            android:buttonTint="@color/black"
            android:textSize="20dp"/>
        <RadioButton
            android:id="@+id/rb_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Blue"
            android:checked="false"
            android:buttonTint="@color/black"/>
    </RadioGroup>
    <TextView
        android:id="@+id/tv2"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/black"/>
    <!--Exercise 3-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ToggleButton
            android:id="@+id/tb_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:textOff="Not Red"
            android:textOn="Red"/>
        <ToggleButton
            android:id="@+id/tb_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:textOff="Not Yellow"
            android:textOn="Yellow"/>
        <ToggleButton
            android:id="@+id/tb_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Blue"
            android:textOff="Not Blue"
            android:text="New ToggleButton" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv3"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/black"/>
    <!--Exercise 4-->
    <RadioGroup
        android:id="@+id/radio_group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <RadioButton
            android:id="@+id/rb_red1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Red"
            android:checked="false"
            android:buttonTint="@color/black"/>
        <RadioButton
            android:id="@+id/rb_yellow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Yellow"
            android:checked="false"
            android:buttonTint="@color/black"
            android:textSize="20dp"/>
        <RadioButton
            android:id="@+id/rb_blue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Blue"
            android:checked="false"
            android:buttonTint="@color/black"/>
    </RadioGroup>
    <Button
        android:id="@+id/btn_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Color Chosen Above"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/tv4"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/black"/>

</LinearLayout>
